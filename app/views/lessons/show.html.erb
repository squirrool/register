<div class="row">
  <div class="col s4">
    <ul class="collection with-header">
      <li class="collection-header"><h5>Lesson Data</h5></li>
      <li class="collection-item">Group: <%= @lesson.group.name %></li>
      <li class="collection-item">Date: <%= @lesson.date.strftime("%d %m %Y") %></li>
      <li class="collection-item">Hours:   <%= @lesson.hours %></li>
    </ul>

  <ul class="collection with-header">
    <li class="collection-header"><h5>Present students</h5></li>
    <% @presenti.each do |f| %>
      <li class="collection-item"><%= f.name %> <%= f.lastname %></li>
    <% end %>
  </ul>
  </div>

  <div class="col s8">
    <ul class="collection with-header">
      <li class="collection-header"><h5>Materials Used</h5></li>
      <li class="collection-item">
       <%= @lesson.materials %> 
      </li>
    </ul>

    <ul class="collection with-header">
      <li class="collection-header"><h5>Topic</h5></li>
        <li class="collection-item"><%= @lesson.areas %></li>
    </ul>

    <ul class="collection with-header">
      <li class="collection-header"><h5>Assigned Homework</h5></li>
        <li class="collection-item"><%= @lesson.homework %></li>
    </ul>
  </div>
</div>

<%= link_to "Back", groups_path%>
