<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td class="right"><%= link_to "<i class=\"material-icons\">delete</i>".html_safe, group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td class="right"><%= link_to "<i class=\"material-icons\">edit</i>".html_safe, edit_group_path(group) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
